{
    "name": "Flutter",
    "id": "flutter-sdk",
    "version": "0.0.2",
    "description": "Install the Flutter SDK",
    "documentationURL": "https://github.com/jarrodcolburn/features/blob/main/src/flutter-sdk",
    "containerEnv": {
        "FLUTTER_HOME" : "/usr/local/lib/flutter",
        "FLUTTER_ROOT": "$FLUTTER_HOME",
        "PATH": "$PATH:$FLUTTER_HOME/bin:$FLUTTER_HOME/.pub-cache/bin"
    },
    "options": {
        "release": {
            "type": "string",
            "enum": [
                "beta",
                "dev",
                "stable"
            ],
            "default": "stable",
            "description": "Flutter release"
        }
    }
}